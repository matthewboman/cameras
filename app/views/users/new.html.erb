<%= render "shared/auth_form",
    title: "Sign Up",
    form_options: { model: @user, url: "/signup", method: :post },
    submit_text: "Create Account" do |f| %>

  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-300 mb-1" %>
    <%= f.text_field :email,
          class: "w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-gray-100 focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <div>
    <%= f.label :password, class: "block text-sm font-medium text-gray-300 mb-1" %>
    <%= f.password_field :password,
          class: "w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-gray-100 focus:ring-2 focus:ring-indigo-500" %>
  </div>
<% end %>


