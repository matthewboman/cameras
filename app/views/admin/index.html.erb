<div class="max-w-xl mx-auto mt-16">

  <h1 class="text-2xl font-bold mb-8 text-gray-900">
    Admin
  </h1>

  <div class="space-y-4">

    <%= link_to "/admin/user-management",
          class: "block w-full px-6 py-4 bg-white border border-gray-200 rounded-xl shadow-sm hover:shadow transition" do %>
      <div class="text-base font-medium text-gray-800">
        Manage Users
      </div>
      <div class="text-sm text-gray-500 mt-1">
        Update roles and permissions
      </div>
    <% end %>

    <%= link_to "/admin/translate",
          class: "block w-full px-6 py-4 bg-white border border-gray-200 rounded-xl shadow-sm hover:shadow transition" do %>
      <div class="text-base font-medium text-gray-800">
        Translate Reports
      </div>
      <div class="text-sm text-gray-500 mt-1">
        Manage report translations
      </div>
    <% end %>

  </div>

</div>
